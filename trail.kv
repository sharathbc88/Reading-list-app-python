# create your Kivy layout in the kv language here

BoxLayout:

    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: .4
        font_size: 12
        Button:
            text: 'List Required'
            on_press: app.required_books()
            on_release: 'normal'
        Button:
            text: 'List Completed'
            on_press: app.completed_books()
        Label:
            text: 'Add New Book'
        Label:
            text: 'Title'
        TextInput:
            id: inputTitle
            text: ''
            font_size:
            multiline: False
            write_tab: False
        Label:
            text: 'Author'
        TextInput:
            id: inputAuthor
            text: ''
            multiline: False
            write_tab: False
        Label:
            text: 'Pages'
        TextInput:
            id: inputPages
            text: ''
            multiline: False
            write_tab: False
        Button:
            text: 'Add Item'
            on_release: app.add_item(inputTitle.text,inputAuthor.text,inputPages.text)
        Button:
            text: 'Clear'
            on_press: app.clear_text()
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: bottomStatusLabel
            size_hint_y: .1
            text: app.top_status_text
        GridLayout:
            id: entriesBox
            size_hint_y: 1
            cols: 1
            orientation: 'vertical'
        Label:
            id: bottomStatusLabel
            size_hint_y: .1
            text: app.bottom_status_text
