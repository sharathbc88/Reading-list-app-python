# create your Kivy layout in the kv language here
BoxLayout:
    orientation: 'horizontal'
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: .4
        font_size: 12
        Button:
            text: 'List Required'
            on_press: app.required_books()
            state: 'down'
            on_release: 'normal'
        Button:
            text: 'List Completed'
            on_press: app.completed_books()
        Label:
            text: 'Add New Book'
        Label:
            text: 'Title'
        TextInput:
            id: inputTitle
            text: ''
            font_size:
            on_text: app.handle_calculate()
        Label:
            text: 'Author'
        TextInput:
            id: inputAuthor
            text: ''
            on_text: app.handle_calculate()
        Label:
            text: 'Pages'
        TextInput:
            id: inputPages
            text: ''
            on_text: app.handle_calculate()
        Button:
            text: 'Add Item'
            on_release: app.add_item(inputTitle.text,inputAuthor.text,inputPages.text)
        Button:
            text: 'Clear'
            on_press: app.clear_fields()
    BoxLayout:
        orientation: 'vertical'
        GridLayout:
            id: entriesBox
            size_hint_y: 1
            cols: 1
            orientation: 'vertical'
        Label:
            id: bottomStatusLabel
            size_hint_y: .2
            text: app.bottom_status_text
